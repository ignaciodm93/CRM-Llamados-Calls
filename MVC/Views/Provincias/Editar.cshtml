@model MVC.Models.ProvinciasModel

@{
    ViewBag.Title = "MOD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm("Editar", "Provincias"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ProvinciasModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Provincia.Id)

        <div class="form-group">



            <div class="col-md-10">
                <h5 class="control-label col-lg-3">Nombre de la Provincia</h5>
                @Html.EditorFor(model => model.Provincia.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Provincia.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                <h5 class="control-label col-lg-3">Pais</h5>
                <div class="form-control-static">
                    @Html.DropDownListFor(m => m.Provincia.PaisId, new SelectList(Model.country, "Id", "Nombre"), new { htmlAttributes = new { @class = "" } })
                </div>
                @Html.ValidationMessageFor(model => model.Provincia.PaisId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
