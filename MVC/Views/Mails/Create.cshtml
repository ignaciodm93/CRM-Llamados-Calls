@model MVC.Models.MailsModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Mails"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Crear MailsModel</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <div class="form-horizontal">



        <div class="form-group">
            <h5 class="control-label col-lg-5">Direccion de correo</h5>

            @Html.TextBoxFor(m => m.Mails.Mail, htmlAttributes: new { @class = "form-control", type = "email" })
        </div>


        

    <div class="form-group">

        @Html.DropDownListFor(m => m.Mails.ClienteId , new SelectList(Model.ClientesLista, "Id", "Apellido"), "Please select", new { htmlAttributes = new { @class = "form-control" } })

    </div>
      




    </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


