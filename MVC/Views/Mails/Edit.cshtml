@model MVC.Models.MailsModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MailsModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Mails.Id)


        <div class="form-group">

            <div>
                <h5 class="control-label col-md-3">Mail</h5>
                @Html.TextBoxFor(m => m.Mails.Mail, htmlAttributes: new { @class = "form-control", type = "email" })
            </div>

            <div>
                <h5 class="control-label col-md-3">Cliente</h5>
                @Html.DropDownListFor(m => m.Mails.ClienteId, new SelectList(Model.ClientesLista, "Id", "Apellido"), new { HtmlAttributes = new { @class = "" } })
            </div>

            <div class="control-label col-md-3">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
