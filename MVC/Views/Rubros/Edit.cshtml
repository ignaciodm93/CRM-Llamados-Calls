@model MVC.Controllers.RubrosModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Rubros" ))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RubrosModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Rubro.Id)

        <div class="form-group">

            <div class="col-md-10">
                @Html.EditorFor(m => m.Rubro.Nombre, new { HtmlAttributes = new { @class = "form-control" }})
                @Html.ValidationMessageFor(model => model.Rubro.Nombre, "", new {@class = "text- danger" })
            </div>

        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
