@model MVC.Models.LlamadosModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>LlamadosModel</h4>
    <hr />


    @using (Html.BeginForm("Delete", "Llamados", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="dl-horizontal">

            <div class="form-control-static">
                <dt>
                    ID de Llamado
                </dt>
                <dd>
                    @Html.DisplayFor(m => m.Llamado.Id)
                </dd>
            </div>

            <div class="form-control-static">
                <dt>
                    Cliente Id
                </dt>
                <dd>
                    @Html.DisplayFor(m => m.Llamado.ClienteId)
                </dd>
            </div>

            <div class="form-control-static">
                <dt>
                    Nombre del cliente
                </dt>
                <dd>
                    @Html.DisplayFor(m => m.Llamado.Clientes.Nombre)
                    @Html.DisplayFor(m => m.Llamado.Clientes.Apellido)
                </dd>
            </div>

            <div class="form-control-static">
                <dt>
                    Fecha
                </dt>
                <dd>
                    @Html.DisplayFor(m => m.Llamado.Fecha)
                </dd>
            </div>

            <div class="form-control-static">
                <dt>
                    Descripcion del Llamado
                </dt>
                <dd>
                    @Html.DisplayFor(m => m.Llamado.DescripcionLLamado)
                </dd>
            </div>


            <div class="form-control-static">
                <dt>
                    Usuario que atendió
                </dt>
                <dd>
                    @Html.DisplayFor(m => m.Llamado.Usuarios.Login)
                    (
                    @Html.DisplayFor(m => m.Llamado.Usuarios.Nombre)
                    )
                </dd>
            </div>




        </div>








        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
