@model MVC.Models.ClientesDireccionesModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Direcciones de Clientes</h2>

<p>
    @Html.ActionLink("Crear", "Create", "ClientesDirecciones", new { @class = "btn btn-primary" })
</p>


    <table class="table" id="dem">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CliDireccion.Calle)
                </th>
                <th>
                    Altura
                </th>
                <th>
                    Dpto
                </th>
                <th>
                    Ciudad
                </th>
                
                <th></th>


            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model.ListaDirecciones)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Calle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Altura)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Piso) º
                        @Html.DisplayFor(modelItem => item.Dpto)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciudades.Nombre )
                    </td>
                   

                    <td>
                        <a class="btn btn-primary btn-xs" title="Editar" href="@Url.Action("Edit", "ClientesDirecciones", new { id = item.Id })"><i class="glyphicon glyphicon-edit"></i></a>

                        <a class="btn btn-success btn-xs" title="Detalles" href="@Url.Action("Details", "ClientesDirecciones", new { id = item.Id })"><i class="glyphicon glyphicon-file"></i></a>

                        <a class="btn btn-danger btn-xs" title="Eliminar" href="@Url.Action("Delete", "ClientesDirecciones", new { id = item.Id })"><i class=" glyphicon glyphicon-trash"></i></a>
                    </td>


                </tr>
            }

        </tbody>


    </table>




@section scripts
    {



    <script>

        $(document).ready(function () {
            $('#dem').DataTable();
        });

    </script>

}