@model MVC.Models.ClientesDireccionesModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ClientesDireccionesModel</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>

    @using (Html.BeginForm("Delete", "ClientesDirecciones", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <h4>Provincias</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Calle
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CliDireccion.Calle)
            </dd>

            <dt>
                Altura
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CliDireccion.Altura)
            </dd>

            <dt>
                Departamento
            </dt>

            <dd>
                <!--aca me esta dando null-->
                @if (Model.CliDireccion != null)
                {
                    if (Model.CliDireccion.Piso == null && Model.CliDireccion.Dpto == null)
                    {
                        @Html.Display("-")
                    }
                    else
                    {
                        @Html.Display("asd")
                    }

                    if (Model.CliDireccion.Piso != null && Model.CliDireccion.Dpto != null)
                    {
                        @Html.DisplayFor(model => model.CliDireccion.Piso)

                        @Html.DisplayFor(model => model.CliDireccion.Dpto)
                    }

                }



            </dd>

            <dt>
                Ciudad
            </dt>

            <dd>
             

                @Html.DisplayFor(model => model.CliDireccion.Ciudades.Nombre) ,
                @Html.DisplayFor(model => model.CliDireccion.Ciudades.Provincias.Paises.Nombre)
            </dd>



        </dl>






        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
