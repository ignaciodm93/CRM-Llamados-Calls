@model MVC.Models.ClientesDireccionesModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h2>Create</h2>



@using (Html.BeginForm("Create", "ClientesDirecciones", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Direcciones de Clientes</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CliDireccion.Id)

    

<div class="form-group">

    

    <h5 class="control-label col-lg-3">Calle</h5>
    @Html.TextBoxFor(m => m.CliDireccion.Calle, htmlAttributes: new { @class = "form-control" })

<div class="col-md">

    <h5 class="control-label col-lg-3">Altura</h5>
    <div class="form-control-static">
        @Html.TextBoxFor(m => m.CliDireccion.Altura, htmlAttributes: new { @class = "form-control" })
    </div>

    <h5 class="control-label col-lg-3">Piso*</h5>
    <div class="form-control-static">
        @Html.TextBoxFor(m => m.CliDireccion.Piso, htmlAttributes: new { @class = "form-control" })
    </div>

    <h5 class="control-label col-lg-3">Departamento*</h5>
    <div class="form-control-static">
        @Html.TextBoxFor(m => m.CliDireccion.Dpto , htmlAttributes: new { @class = "form-control" })
    </div>

    <div class="col-md">
        <h5 class="control-label col-lg-3">Ciudad</h5>

        <div class="form-control-static">
            @Html.DropDownListFor(m => m.CliDireccion.CiudadId, new SelectList(Model.Cities, "Id", "Nombre"), "Seleccionar uno", new { htmlAttributes = new { @class = "form-control" } })
        </div>




        @Html.ValidationMessageFor(model => model.Cities, "", new { @class = "text-danger" })
    </div>




    
            <div class="col-md">
                <h5 class="control-label col-lg-3">Cliente*no obligatorio*</h5>
                <div class="form-control-static">

                    @Html.DropDownListFor(m => m.CliDireccion.ClienteId, new SelectList(Model.ListaClientes, "Id", "Apellido"), "Seleccionar uno",new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
    



</div>


</div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>