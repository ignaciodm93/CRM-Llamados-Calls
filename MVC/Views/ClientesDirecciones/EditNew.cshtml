@model MVC.Models.ClientesDireccionesModel

@{
    ViewBag.Title = "EditNew";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditNew</h2>

@using (Html.BeginForm("EditNew", "ClientesDirecciones", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ClientesModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.CliDireccion.Id)
    <div class="form-group">



        <div class="form-group">
            <h5 class="control-label col-lg-3">Calle</h5>
            @Html.TextBoxFor(m => m.CliDireccion.Calle, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CliDireccion.Calle, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <h5 class="control-label col-lg-3">Altura</h5>
            @Html.TextBoxFor(m => m.CliDireccion.Altura, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CliDireccion.Altura, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <h5 class="control-label col-lg-3">CiudadId</h5>
            <div class="form-control-static">
                @Html.DropDownListFor(m => m.CliDireccion.CiudadId, new SelectList(Model.Cities, "Id", "Nombre"), new { htmlAttributes = new { @class = "" } })
            </div>
            @Html.ValidationMessageFor(model => model.CliDireccion.CiudadId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <h5 class="control-label col-lg-3">Piso</h5>
            @Html.TextBoxFor(m => m.CliDireccion.Piso, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CliDireccion.Piso, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <h5 class="control-label col-lg-3">Dpto</h5>
            @Html.TextBoxFor(m => m.CliDireccion.Dpto, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CliDireccion.Dpto, "", new { @class = "text-danger" })
        </div>


        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
