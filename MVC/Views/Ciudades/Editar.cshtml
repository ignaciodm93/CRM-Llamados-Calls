@model MVC.Models.CiudadesModel

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm("Editar", "Ciudades"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ciudad</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Ciudad.Id)

        <div class="form-group">



            <div class="col-md-10">
                <h5 class="control-label col-lg-3">Nombre de la Ciudad</h5>
                @Html.EditorFor(model => model.Ciudad.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ciudad.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                <h5 class="control-label col-lg-3">Provincia</h5>
                <div class="form-control-static">
                    @Html.DropDownListFor(m => m.Ciudad.ProvinciaId, new SelectList(Model.provinces, "Id", "Nombre"), new { htmlAttributes = new { @class = "" } })
                </div>
                @Html.ValidationMessageFor(model => model.Ciudad.ProvinciaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
