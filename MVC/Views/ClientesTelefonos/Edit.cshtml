@model MVC.Models.ClientesTelefonosModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "ClientesTelefonos", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Telefonos</h4>
    <hr />

    @Html.HiddenFor(m => m.clientoriginal)
    @Html.HiddenFor(m => m.teleoriginal)

    <div class="form-group">
        <h5 class="control-label col-lg-3">Numero</h5>
        @Html.TextBoxFor(m => m.ClientesTels.Telefono, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ClientesTels.Telefono, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <h5 class="control-label col-lg-3">Ciudad</h5>
        @Html.DropDownListFor(m => m.ClientesTels.CiudadId, new SelectList(Model.cities, "Id", "Nombre"), new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ClientesTels.CiudadId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <h5 class="control-label col-lg-3">Cliente Id</h5>
        @Html.DropDownListFor(m => m.ClientesTels.ClienteId, new SelectList(Model.clients, "Id", "Nombre"), new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ClientesTels.ClienteId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <h5 class="control-label col-lg-3">Provincia</h5>
        @Html.DisplayFor(p => p.ClientesTels.Ciudades.Provincias.Nombre)
    </div>



    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
